                <div>{{.Nickname}}</div>
            </li>
            <li class="account__item">
                <div>Email:</div>
                <div>{{.Email}}</div>
            </li>
        </ul>
    </section>
    {{end}}

    <section class="cards">
        <ul class="cards__list">
            <li class="cards__item">
                <div>Created Games</div>
            </li>
